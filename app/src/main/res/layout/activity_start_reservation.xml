<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.StartReservationActivity"
    android:background="@drawable/carbackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reservationDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Reservation Details:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/startReservationStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/reservationDetails"
                android:layout_marginTop="25dp"
                android:text="Start:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/startReservationStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/startReservationStart"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/startReservationStart"
                android:text="05/19/2016"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#008888" />

            <TextView
                android:id="@+id/startReservationStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/startReservationStartDate"
                android:layout_below="@+id/startReservationStart"
                android:text="5:00 PM"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#008888" />

            <TextView
                android:id="@+id/startReservationEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/startReservationStart"
                android:layout_below="@+id/startReservationStartTime"
                android:layout_marginTop="29dp"
                android:text="End:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/startReservationEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/startReservationStartTime"
                android:layout_alignTop="@+id/startReservationEnd"
                android:text="05/20/2016"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#008888" />

            <TextView
                android:id="@+id/startReservationEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/startReservationEndDate"
                android:layout_below="@+id/startReservationEnd"
                android:text="2:00 AM"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#008888" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/startReservationEndTime"
                android:layout_marginTop="25dp"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/startReservationTapToStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp"
                android:text="Tap To Start"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
